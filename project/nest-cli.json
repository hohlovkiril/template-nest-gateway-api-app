{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/gateway-api/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/gateway-api/tsconfig.app.json"
  },
  "projects": {
    "authorization": {
      "type": "library",
      "root": "libs/authorization",
      "entryFile": "index",
      "sourceRoot": "libs/authorization/src",
      "compilerOptions": {
        "tsConfigPath": "libs/authorization/tsconfig.lib.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "config": {
      "type": "library",
      "root": "libs/config",
      "entryFile": "index",
      "sourceRoot": "libs/config/src",
      "compilerOptions": {
        "tsConfigPath": "libs/config/tsconfig.lib.json"
      }
    },
    "gateway-api": {
      "type": "application",
      "root": "apps/gateway-api",
      "entryFile": "main",
      "sourceRoot": "apps/gateway-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway-api/tsconfig.app.json"
      }
    }
  },
  "monorepo": true,
  "root": "apps/gateway-api"
}